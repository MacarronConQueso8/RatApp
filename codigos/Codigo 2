def inicio():
    # Solicitud de nombre
    nombre = input("Para empezar, dime como te llamas, mi queridx reoedor. \n")
    print()
    print("Hola ", nombre, ", bienvenido a ratapp")
    print()

    # CÃ¡lculo de edad
    agno = int(input("Para preparar tu perfil, dime en quÃ© aÃ±o naciste, rata ponzoÃ±osa  (â€¢â—¡â€¢) /. \n"))
    edad = 2022-agno
    print()

    # CÃ¡lculo de estatura
    estatura = float(input("CuÃ©ntame mÃ¡s de ti, no podemos aceptar a cualquier roedor. Â¿CuÃ¡nto mides? DÃ­melo en metros. \n"))
    estatura_m = int(estatura)
    estatura_cm = int( (estatura - estatura_m)*100 + 1 )

    # Cantidad de amigos
    num_amigos = int(input("Muy bien. Finalmente, cuÃ©ntame cuantos amigos tienes. \n"))


    print()
    print("Muy bien,", nombre, ". Entonces podemos crear un perfil con estos datos.")
    print("--------------------------------------------------")
    print("Nombre:  ", nombre)
    print("Edad:    ", edad, "aÃ±os")
    print("Estatura:", estatura_m, "metros y", estatura_cm, "centÃ­metros")
    print("Amigos:  ", num_amigos)
    print("--------------------------------------------------")
    print("Gracias por la informaciÃ³n. Bienvenido a la colonia de ratapp")
    print()


    continuar = True

    while continuar:


        escribir_mensaje = str(input("Â¿Deseas escribir un mensaje? (Si/No) "))

        if escribir_mensaje.lower() == "si" or escribir_mensaje == "":
            mensaje = input("Vamos a publicar un mensaje. Â¿QuÃ© piensas hoy? ")
            print()
            print("--------------------------------------------------")
            print(nombre, "dice:", mensaje)
            print("--------------------------------------------------")
        elif escribir_mensaje.lower() == 'no' :
            continuar = False
        elif escribir_mensaje.lower() != 'si':
            escribir_mensaje = str(input("Â¿Deseas escribir un mensaje? (Si/No) "))


 inicio()

